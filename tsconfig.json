{
  "include": ["src"],
  "compilerOptions": {
    "lib": [
      "ES2021.String",
      "dom"
    ],
    "alwaysStrict": true,
    "target": "ES6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "rootDirs": ["src"],
    "outDir": "dist"
  },
}
